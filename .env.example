# ================================
# Application Configuration
# ================================
APP_NAME=Face Analysis API
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=info

# ================================
# Server Configuration
# ================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# ================================
# Model Configuration
# ================================
MODEL_NAME=buffalo_l
MODEL_ROOT=~/.insightface/models
USE_GPU=false
GPU_DEVICE_ID=0

# ================================
# Security Configuration
# ================================
API_KEY_ENABLED=false
API_KEY=your-secret-api-key-here
SECRET_KEY=your-secret-key-for-jwt

# ================================
# Cache Configuration
# ================================
CACHE_ENABLED=true
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379/0

# ================================
# Logging Configuration
# ================================
LOG_FILE=logs/app.log
LOG_ROTATION=1d
LOG_RETENTION=30d
LOG_FORMAT=json

# ================================
# Performance Configuration
# ================================
MAX_IMAGE_SIZE=10485760         # 10MB in bytes
MAX_BATCH_SIZE=10
PROCESSING_TIMEOUT=30           # seconds
MAX_CONCURRENT_REQUESTS=100

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# ================================
# Monitoring Configuration
# ================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# ================================
# CORS Configuration
# ================================
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# ================================
# Database Configuration (Optional)
# ================================
DATABASE_URL=sqlite:///./face_analysis.db
# DATABASE_URL=postgresql://user:password@localhost/face_analysis

# ================================
# Storage Configuration
# ================================
TEMP_STORAGE_PATH=/tmp/face-api
CLEANUP_TEMP_FILES=true
MAX_TEMP_FILE_AGE=3600          # 1 hour in seconds

# ================================
# Feature Flags
# ================================
ENABLE_FACE_DETECTION=true
ENABLE_FACE_COMPARISON=true
ENABLE_BATCH_PROCESSING=true
ENABLE_FACE_TRACKING=true
ENABLE_EMBEDDING_EXTRACTION=true

# ================================
# Development Configuration
# ================================
RELOAD_ON_CHANGE=true
DEBUG_MODE=true
PROFILE_REQUESTS=false

# ================================
# Production Configuration
# ================================
# Uncomment for production
# DEBUG=false
# LOG_LEVEL=warning
# RELOAD=false
# WORKERS=4
# API_KEY_ENABLED=true
# RATE_LIMIT_ENABLED=true
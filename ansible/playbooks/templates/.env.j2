# Face API Environment Configuration
# Generated by Ansible

# Application Settings
APP_NAME="Face Analysis API"
APP_VERSION="1.0.0"
ENVIRONMENT={{ environment }}
DEBUG=false
LOG_LEVEL={{ log_level }}

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# Model Settings
MODEL_NAME=buffalo_l
MODEL_ROOT=~/.insightface/models
USE_GPU=false
GPU_DEVICE_ID=0

# Security Settings
API_KEY_ENABLED=false
# API_KEY=your-secure-api-key-here
SECRET_KEY=your-secret-key-for-jwt

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379/0

# Logging Settings
LOG_FILE=logs/app.log
LOG_ROTATION=1d
LOG_RETENTION=30d
LOG_FORMAT=json

# Performance Settings
MAX_IMAGE_SIZE=10485760  # 10MB
MAX_BATCH_SIZE=10
PROCESSING_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# CORS Settings
CORS_ENABLED=true
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# Storage Settings
TEMP_STORAGE_PATH=/tmp/face-api
CLEANUP_TEMP_FILES=true
MAX_TEMP_FILE_AGE=3600

# Feature Flags
ENABLE_FACE_DETECTION=true
ENABLE_FACE_COMPARISON=true
ENABLE_BATCH_PROCESSING=true
ENABLE_FACE_TRACKING=true
ENABLE_EMBEDDING_EXTRACTION=true

# Development Settings
RELOAD_ON_CHANGE=false
DEBUG_MODE=false
PROFILE_REQUESTS=false
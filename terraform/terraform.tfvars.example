# Oracle Cloud Infrastructure Configuration
# Copy this file to terraform.tfvars and fill in your actual values

# OCI Tenancy and User Information
tenancy_ocid     = "ocid1.tenancy.oc1..aaaaaaaa..."
user_ocid        = "ocid1.user.oc1..aaaaaaaa..."
fingerprint      = "aa:bb:cc:dd:ee:ff..."
private_key_path = "~/.oci/oci_api_key.pem"

# Region and Compartment
region           = "ap-seoul-1"  # Change to your preferred region
compartment_ocid = "ocid1.compartment.oc1..aaaaaaaa..."

# SSH Key for Instance Access
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQ... your-key-here"

# Optional: Instance Configuration
instance_display_name = "face-api-production"

# Optional: Network Configuration
vcn_cidr_blocks    = ["10.0.0.0/16"]
subnet_cidr_block  = "10.0.1.0/24"